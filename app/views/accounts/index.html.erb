<h1>Listing accounts</h1>

<table>
  <thead>
    <tr>
      <th>Account Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.description %></td>
        <td><%= link_to 'Show', user_account_path(account.user, account) %></td>
        <td><%= link_to 'Edit', edit_user_account_path(account.user, account) %></td>
        <td><%= link_to 'Destroy', user_account_path(account.user, account), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Show All Currencies', user_account_currencies_path(account.user, account) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New account', new_user_account_path, class: "button small round"  %>