<h1>Listing currencies</h1>

<table>
  <thead>
    <tr>
      <th>Currency Name</th>
      <th>Account Balance</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @currencies.each do |currency| %>
      <tr>
        <td><%= currency.name %></td>
        <td><%= humanized_money_with_symbol currency.amount %></td>
        <td><%= link_to 'Show', user_account_currency_path(currency.account.user, currency.account, currency) %></td>
        <td><%= link_to 'Edit', edit_user_account_currency_path(currency.account.user, currency.account, currency) %></td>
        <td><%= link_to 'Destroy', user_account_currency_path(currency.account.user, currency.account, currency), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Currency', new_user_account_currency_path, class: "button small round"  %>
<%= link_to 'Back to Accounts', user_accounts_path, class: "button small round"  %>