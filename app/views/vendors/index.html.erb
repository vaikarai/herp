<h1>Listing vendors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>City</th>
      <th>Country</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= vendor.name %></td>
        <td><%= vendor.address1 %></td>
        <td><%= vendor.business_phone %></td>
        <td><%= vendor.city %></td>
        <td><%= vendor.country %></td>
        <td><%= link_to 'Show', category_vendor_path(vendor.category, vendor) %></td>
         <td><%= link_to 'Edit', edit_category_vendor_path(vendor.category, vendor) %></td>
        <td><%= link_to 'Destroy', category_vendor_path(vendor.category, vendor), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New vendor', new_category_vendor_path, class: "button small round"  %>
<%= link_to 'Back to All Categories', categories_path, class: "button small round"  %>